doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Checkers
    link(rel='stylesheet', href='./css/app.css')
  body
    h1 Wizard Checkers
    #wrapper
      button#start Start
      table#board
        tbody
          -for(var y = 0; y < 8; y++)
            tr
              -for(var x = 0; x < 8; x++)
                if(x % 2 === 0 && y % 2 === 0 || x % 2 !== 0 && y % 2 !==0)
                  td(data-positionx= x, data-positiony =y)
                else
                  td.valid(data-positionx =x,data-positiony=y)

    script(src='./js/vendor/jquery-2.1.0.js')
    script(src='./js/source/main.js')
